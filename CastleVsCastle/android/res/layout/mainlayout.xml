<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="426dp"
        android:layout_height="741dp"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-1dp"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/newgame"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/box"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="367dp"
        android:layout_marginRight="216dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.477"
        android:layout_marginRight="216dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/castle"
        android:layout_width="384dp"
        android:layout_height="224dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/castle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/castlewar"
        android:layout_width="208dp"
        android:layout_height="143dp"
        android:src="@drawable/castlewar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="449dp"
        android:layout_marginRight="78dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
    android:id="@+id/txtStatus"
        android:layout_width="180dp"
        android:layout_height="20dp" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="180dp"
        android:layout_height="20dp"

        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/castle"
        app:layout_constraintTop_toTopOf="@+id/castlewar"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/castle"
        app:layout_constraintVertical_bias="0.606"
        app:layout_constraintHorizontal_bias="0.244" />

</android.support.constraint.ConstraintLayout>